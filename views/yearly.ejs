      });

      set1.forEach(month => {
        console.log(month)
          let sum = 0;
          Users.forEach(user => {
              const date = new Date(user.date);  
              if (date.getMonth() + 1 === month &&date2.getFullYear()==date.getFullYear()) {
                  sum += user.amount;  
                 
              }
    
          });
          
          arr.push(sum); 

      });
      console.log(arr)

      const colors = [
          'rgba(255, 99, 132, 0.6)', 
          'rgba(54, 162, 235, 0.6)', 
          'rgba(255, 206, 86, 0.6)', 
