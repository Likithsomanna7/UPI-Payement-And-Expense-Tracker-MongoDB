          'rgba(52, 152, 219, 0.6)', 
          'rgba(241, 196, 15, 0.6)', 
          'rgba(46, 204, 113, 0.6)'  
      ];

      const barColors = Array.from(set).map((month, index) => {
          return colors[index % colors.length];
      });

      const ctx = document.getElementById('myChart').getContext('2d');
      new Chart(ctx, {
          type: 'bar',
          data: {
              labels: Array.from(set),  
              datasets: [{
                  label: 'Total Amount',
                  data: arr, 
                  borderWidth: 1,
                  backgroundColor: barColors, 
                  borderColor: colors,
              }]
          },
          options: {
